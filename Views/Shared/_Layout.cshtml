<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Industrial Vehicle Monitoring</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Leaflet CSS for Map Integration -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        :root {
            --primary-bg: #0F1419;
            --secondary-bg: #1A202C;
            --card-bg: #2D3748;
            --border-color: #4A5568;
            --text-primary: #E2E8F0;
            --text-secondary: #A0AEC0;
            --accent-blue: #3182CE;
            --accent-green: #38A169;
            --accent-orange: #DD6B20;
            --accent-red: #E53E3E;
            --accent-yellow: #D69E2E;
            --glow-blue: rgba(49, 130, 206, 0.3);
            --glow-green: rgba(56, 161, 105, 0.3);
            --glow-red: rgba(229, 62, 62, 0.3);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--primary-bg);
            color: var(--text-primary);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            font-weight: 400;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Industrial Grid Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(74, 85, 104, 0.1) 1px, transparent 1px),
                linear-gradient(90deg, rgba(74, 85, 104, 0.1) 1px, transparent 1px);
            background-size: 20px 20px;
            pointer-events: none;
            z-index: 0;
        }

        .dashboard-container {
            position: relative;
            z-index: 1;
            padding: 1rem;
            min-height: 100vh;
        }

        /* Top Bar */
        .top-bar {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        .top-bar h1 {
            color: var(--text-primary);
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .system-status {
            display: flex;
            align-items: center;
            gap: 1rem;
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: var(--accent-green);
            box-shadow: 0 0 10px var(--glow-green);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        /* Cards */
        .dashboard-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .dashboard-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, var(--accent-blue), var(--accent-green));
        }

        .dashboard-card:hover {
            border-color: var(--accent-blue);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        }

        .card-header-industrial {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border-color);
        }

        .card-title {
            color: var(--text-primary);
            font-size: 1.125rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .card-subtitle {
            color: var(--text-secondary);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin: 0;
        }

        /* Metrics */
        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .metric-card-industrial {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            padding: 1.5rem;
            text-align: center;
            position: relative;
            transition: all 0.3s ease;
        }

        .metric-card-industrial:hover {
            border-color: var(--accent-blue);
            box-shadow: 0 0 20px rgba(49, 130, 206, 0.2);
        }

        .metric-value-industrial {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-primary);
            line-height: 1;
            margin-bottom: 0.5rem;
        }

        .metric-label-industrial {
            color: var(--text-secondary);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .metric-icon {
            width: 16px;
            height: 16px;
            opacity: 0.7;
        }

        /* Status Indicators */
        .status-indicator-industrial {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-online {
            background: rgba(56, 161, 105, 0.2);
            color: var(--accent-green);
            border: 1px solid var(--accent-green);
        }

        .status-offline {
            background: rgba(229, 62, 62, 0.2);
            color: var(--accent-red);
            border: 1px solid var(--accent-red);
        }

        .status-dot-small {
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: currentColor;
        }

        /* Map Container */
        .map-container-industrial {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            height: 400px;
            display: flex;
            flex-direction: column;
            position: relative;
            overflow: hidden;
        }

        .map-placeholder {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
            background: rgba(45, 55, 72, 0.9);
            padding: 2rem;
            border-radius: 8px;
            border: 1px solid var(--border-color);
        }

        .map-placeholder i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        /* Leaflet Map Styles */
        #vehicleMap {
            height: 100%;
            width: 100%;
            background: var(--secondary-bg);
        }

        .leaflet-container {
            background: var(--primary-bg);
        }

        .leaflet-tile {
            filter: contrast(1.1) brightness(0.9) saturate(0.8);
        }

        /* Custom Vehicle Marker */
        .vehicle-marker {
            background: var(--accent-blue);
            border: 3px solid #ffffff;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            position: relative;
            box-shadow: 0 0 15px var(--glow-blue);
        }

        .vehicle-marker::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 8px;
            height: 8px;
            background: #ffffff;
            border-radius: 50%;
        }

        /* Vehicle Trail */
        .vehicle-trail {
            stroke: var(--accent-blue);
            stroke-width: 3;
            fill: none;
            opacity: 0.7;
        }

        /* Custom Popup Styles */
        .leaflet-popup-content-wrapper {
            background: var(--card-bg);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
            border-radius: 6px;
        }

        .leaflet-popup-content {
            margin: 12px 16px;
            font-size: 13px;
        }

        .leaflet-popup-tip {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
        }

        /* Data Table */
        .data-table-industrial {
            background: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: 6px;
            overflow: hidden;
        }

        .data-table-industrial table {
            width: 100%;
            margin: 0;
            color: var(--text-primary);
        }

        .data-table-industrial th {
            background: var(--primary-bg);
            color: var(--text-secondary);
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 1rem;
            border-bottom: 1px solid var(--border-color);
        }

        .data-table-industrial td {
            padding: 1rem;
            border-bottom: 1px solid var(--border-color);
            font-size: 0.875rem;
        }

        .data-table-industrial tbody tr:hover {
            background: rgba(74, 85, 104, 0.3);
        }

        /* Alerts */
        .alert-industrial {
            border: none;
            border-radius: 6px;
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid;
        }

        .alert-info-industrial {
            background: rgba(49, 130, 206, 0.1);
            border-left-color: var(--accent-blue);
            color: var(--text-primary);
        }

        .alert-warning-industrial {
            background: rgba(217, 158, 46, 0.1);
            border-left-color: var(--accent-yellow);
            color: var(--text-primary);
        }

        .alert-danger-industrial {
            background: rgba(229, 62, 62, 0.1);
            border-left-color: var(--accent-red);
            color: var(--text-primary);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .dashboard-container {
                padding: 0.5rem;
            }
            
            .metrics-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .metric-value-industrial {
                font-size: 2rem;
            }
        }

        /* Loading Animation */
        .loading-spinner {
            width: 20px;
            height: 20px;
            border: 2px solid var(--border-color);
            border-top: 2px solid var(--accent-blue);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Scrollbar Styling */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--primary-bg);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--text-secondary);
        }
    </style>
</head>
<body>
    <main role="main" class="dashboard-container">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Leaflet JavaScript for Map Integration -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
